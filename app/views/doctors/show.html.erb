<h1><%= @doctor.name %></h1>
<h2><%= @doctor.department %></h2>

<ul>
    <% @doctor.appointments.each do |appt| %>
        <li><%= appt.appointment_datetime.strftime("%B %-d, %Y at %k:%M") %><br>
        <%= link_to appt.patient.name, patient_path(appt.patient) %><br><br>
        <% end %></li>
</ul>